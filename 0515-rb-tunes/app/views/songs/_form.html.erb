<%= form_for @song, class: "form-horizontal" do |f| %>
	<div class="form-group">
		<label for="song-title" class='col-sm-2 control-label'>Title</label>
		<div class="col-sm-10">
			<%= f.text_field :title, class: "form-control", id: "song-title" %>
		</div>
		<label for="song-artist" class='col-sm-2 control-label'>Artist</label>
		<div class="col-sm-10">
			<%= f.collection_select :artist_id, @artists, :id, :name, {}, { class: "form-control", id: "song-artist" } %>
		</div>
		<label for="song-album" class='col-sm-2 control-label'>Album</label>
		<div class="col-sm-10">
			<%= f.collection_select :album_id, @albums, :id, :name, {}, { class: "form-control", id: "song-album" } %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<%= f.submit "Submit", class: "btn btn-info" %>	
		</div>
	</div>
<% end %>
